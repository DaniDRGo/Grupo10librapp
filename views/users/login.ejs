<%- include('../partials/head') %>
    <body>
        <%- include('../partials/header') %>
        <main class="formulario-registro">
            <% if (locals.message) { %>
                <p><%= message %> </p>
            <% } %>
            <div class="login-form">
                <form action="/users/login" id="form" method="post" class="form">
                    <div class="input">
                        <h3 class="subtitulo-registro">Ingresa tus datos</h3>
                    </div>
                    <div class="input">
                        <!-- <label for="nickname">Nombre de Usuario</label> -->
                        <input type="email" 
                        name="email" 
                        id="email" 
                        placeholder="email" 
                        required
                        value= "<%= locals.user && user ? users : null  %> "
                        >
                        <i class="email fa"></i>
                    </div>
                    <div class="input">
                        <!-- <label for="password">Contraseña</label> -->
                        <input type="password" name="password" id="password" placeholder="Contraseña" required>
                        <i class="password fa"></i>
                    </div>
                    <div class="form-confirm">
                        <div class="input">
                            <div class="categories-check">
                                <input type="checkbox" name="recordarDatos" checked>
                                <label for="recordarDatos">Recordar datos</label>
                            </div>
                        </div>
                        <div class="input">
                            <div class="categories-check">
                                <a href="">Olvide mi contraseña</a>
                            </div>
                        </div>
                    </div>
                    <div class="input botones loginSend">
                        <input type="submit" name="Enviar">
                    </div>
                </form>
            </div>
        </main>
        <%- include('../partials/footer') %>
        <script src="../js/index.js"></script>
        <script src="../js/formulario.js"></script>
    </body>
</html>