<%- include('../partials/head') %>
    <body>
        <%- include('../partials/header') %>
        <main class="formulario-registro">
            <div class="login-form">
                <form action="/" method="post" class="form">
                    <div class="input">
                        <h3 class="subtitulo-registro">Ingresa tus datos</h3>
                    </div>
                    <div class="input">
                        <!-- <label for="nickname">Nombre de Usuario</label> -->
                        <input type="text" name="nickname" id="nickname" placeholder="Usuario" required>
                    </div>
                    <div class="input">
                        <!-- <label for="password">Contraseña</label> -->
                        <input type="password" name="password" id="password" placeholder="Contraseña" required>
                    </div>
                    <div class="form-confirm">
                        <div class="input">
                            <div class="categories-check">
                                <input type="checkbox" name="tc" value="accept" checked>
                                <label for="tc">Recordar datos</label>
                            </div>
                        </div>
                        <div class="input">
                            <div class="categories-check">
                                <a href="">Olvide mi contraseña</a>
                            </div>
                        </div>
                    </div>
                    <div class="input botones loginSend">
                        <input type="submit" name="Enviar">
                    </div>
                </form>
            </div>
        </main>
        <%- include('../partials/footer') %>
        <script src="../js/index.js"></script>
    </body>
</html>