<%- include('../partials/head') %>
    <body>
        <%- include('../partials/header') %>

        <main class="formulario-registro">
            <section class="titulo-registro">
                <h1>REGISTRATE</h1>
            </section>
            <div class="register-form">
                <form class="form-seccion" action="/users/create" method="post" enctype="multipart/form-data">
                    <div class="primera-seccion">
                        <div class="input">
                            <h3 class="subtitulo-registro">Datos Personales</h3>
                        </div>
                        <div class="input">
                            <!-- <label for="nombre">Nombre</label> -->
                            <input type="text" name="nombre" id="nombre" placeholder="Nombre" required>
                        </div>
                        <div class="input">
                            <!-- <label for="apellido">Apellido</label> -->
                            <input type="text" name="apellido" id="apellido" placeholder="Apellido" required>
                        </div>
                        <div class="input image">
                            <label for="avatar" class="form-titles">Seleccioná una Imagen</label>
                            <input type="file" name="avatar" id="avatar" accept=".png, .jpg" required>
                        </div>
                        <div class="input">
                            <label for="fecha">Fecha de Nacimiento</label>
                            <input type="date" name="fecha" id="fecha" required>
                        </div>
                        <div class="input">
                            <!-- <label for="email">Correo Electrónico</label> -->
                            <input type="email" name="email" id="email" placeholder="email" required>
                        </div>
                        <div class="input">
                            <!-- <label for="phone">Teléfono</label> -->
                            <input type="tel" name="phone" id="phone" placeholder="Telefono" required>
                        </div>
                        <div class="input">
                            <!-- <label for="pais">País</label> -->
                            <input type="text" name="pais" id="pais" placeholder="País" required>
                        </div>
                    </div>
                    <div class="segunda-seccion">
                        <div class="input">
                            <!-- <label for="provincia">Provincia</label> -->
                            <input type="text" name="provincia" id="provincia" placeholder="Provincia">
                        </div>
                        <div class="input">
                            <!-- <label for="localidad">Localidad</label> -->
                            <input type="text" name="localidad" id="localidad" placeholder="Localidad">
                        </div>
                        <div class="input">
                            <!-- <label for="direccion">Dirección</label> -->
                            <input type="text" name="direccion" id="direccion" placeholder="Direccion" required>
                        </div>
                        <div class="input">
                            <!-- <label for="piso">Piso o Departamento</label> -->
                            <input type="text" name="piso" id="piso" placeholder="Piso o Departamento">
                        </div>
                        <div class="input">
                            <!-- <label for="cp">Código Postal</label> -->
                            <input type="text" name="cp" id="cp" placeholder="Código Postal" required>
                        </div>
                        <div class="input">
                            <h3 class="subtitulo-registro">Datos Login</h3>
                        </div>
                        <div class="input">
                            <!-- <label for="password">Contraseña</label> -->
                            <input type="password" name="password" id="password" placeholder="Contraseña" required>
                        </div>
                        <div class="input">
                            <!-- <label for="confirm-password">Confirmar Contraseña</label> -->
                            <input type="password" name="confirm-password" id="confirm-password" placeholder="Repita su Contraseña" required>
                        </div>
                    </div>
                    <div class="form-confirm">
                        <div class="input">
                            <div class="categories-check">
                                <input type="checkbox" name="tc" value="accept" checked>
                                <label for="tc">Acepto Términos y Condiciones</label>
                            </div>
                        </div>
                        <div class="input botones">
                            <input type="reset" value="Borrar Formulario">
                            <input type="submit" name="Enviar">
                        </div>
                    </div>
                </form>
            </div>
        </main>
        <%- include('../partials/footer') %>
        <script src="../js/index.js"></script>
    </body>
</html>