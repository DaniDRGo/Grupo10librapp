<%- include('../partials/head') %>
    <body>
        <%- include('../partials/header') %>

        <main class="formulario-registro">
            <section class="titulo-registro">
                <h1>ACTUALIZA TUS DATOS</h1>
            </section>
            <div class="register-form">
                <form class="form-seccion" action="/users/edit/<%=userToEdit.id_usuario%>?_method=PUT" method="post">
                    <div class="primera-seccion">
                        <div class="input">
                            <h3 class="subtitulo-registro">Datos Personales</h3>
                        </div>
                        <div class="input">
                            <!-- <label for="nombre">Nombre</label> -->
                            <input type="text" name="nombre" id="nombre" placeholder="Nombre" required  value="<%= userToEdit.nombre %>">
                        </div>
                        <div class="input">
                            <!-- <label for="apellido">Apellido</label> -->
                            <input type="text" name="apellido" id="apellido" placeholder="Apellido" required value="<%= userToEdit.apellido %>">
                        </div>
                        <!--<div class="input image">
                            <label for="avatar" class="form-titles">Seleccioná una Imagen</label>
                            <input type="file" name="avatar" id="avatar" accept=".png, .jpg" value="<%= userToEdit.avatar %>">
                        </div>-->
                        <div class="input">
                            <label for="fecha">Fecha de Nacimiento</label>
                            <input type="date" name="fecha" id="fecha" required value="<%= userToEdit.fecha_nacimiento %>">
                        </div>
                        <div class="input">
                            <!-- <label for="email">Correo Electrónico</label> -->
                            <input type="email" name="email" id="email" placeholder="email" required value="<%= userToEdit.email %>">
                        </div>
                        <div class="input">
                            <!-- <label for="phone">Teléfono</label> -->
                            <input type="tel" name="phone" id="phone" placeholder="Telefono" required value="<%= userToEdit.telefono %>">
                        </div>
                        <div class="input">
                            <!-- <label for="pais">País</label> -->
                            <input type="text" name="pais" id="pais" placeholder="País" required value="<%= userToEdit.pais %>">
                        </div>
                    </div>
                    <div class="segunda-seccion">
                        <div class="input">
                            <!-- <label for="provincia">Provincia</label> -->
                            <input type="text" name="provincia" id="provincia" placeholder="Provincia" value="<%= userToEdit.provincia %>">
                        </div>
                        <div class="input">
                            <!-- <label for="localidad">Localidad</label> -->
                            <input type="text" name="localidad" id="localidad" placeholder="Localidad" value="<%= userToEdit.localidad %>">
                        </div>
                        <div class="input">
                            <!-- <label for="direccion">Dirección</label> -->
                            <input type="text" name="direccion" id="direccion" placeholder="Direccion" required value="<%= userToEdit.direccion %>">
                        </div>
                        <div class="input">
                            <!-- <label for="piso">Piso o Departamento</label> -->
                            <input type="text" name="piso" id="piso" placeholder="Piso o Departamento" value="<%= userToEdit.piso %>">
                        </div>
                        <div class="input">
                            <!-- <label for="cp">Código Postal</label> -->
                            <input type="text" name="cp" id="cp" placeholder="Código Postal" required value="<%= userToEdit.cod_postal %>">
                        </div>
                        <!-- <div class="input">
                            <h3 class="subtitulo-registro">Datos Login (Actualice Contraseña)</h3>
                        </div> -->
                        <!-- <div class="input"> -->
                            <!-- <label for="password">Contraseña</label> -->
                            <!-- <input type="password" name="password" id="password" placeholder="Contraseña" value="<%= userToEdit.password %>">
                        </div> -->
                        <!-- <div class="input">
                            <label for="confirm-password">Confirmar Contraseña</label>
                            <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Repita su Contraseña" required>
                        </div> -->
                    </div>
                    <div class="form-confirm">
                        <!-- <div class="input">
                            <div class="categories-check">
                                <input type="radio" name="isAdmin" >
                                <label for="isAdmin">Rol Administrador</label>
                            </div>
                        </div> -->
                        <div class="input botones">
                            <input type="reset" value="Borrar Formulario">
                            <input type="submit" name="Actualizar-Usuario">
                        </div>
                    </div>
                </form>
            </div>
        </main>
        <%- include('../partials/footer') %>
        <script src="../js/index.js"></script>
    </body>
</html>